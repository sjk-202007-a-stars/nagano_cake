<div class="container">
  <div class="row">
    <div class="col-sm-8">
      <h4>パスワード変更</h4>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "end_users/shared/error_messages", resource: resource %>
          <div class="form-group">
            <%= f.label :パスワード（変更前）,class:"col-sm-8" %>
            <%= f.password_field :current_password, autocomplete: "current-password", class:"col-sm-offset-1" %>
          </div>
          <div class="form-group">
            <%= f.label :新しいパスワード, class:"col-sm-8"%>
            <%= f.password_field :password, autocomplete: "new-password", class:"col-sm-offset-1" %>
            <% if @minimum_password_length %>
              ※<%= @minimum_password_length %> 文字以上
            <% end %>
          </div>
          <div class="form-group">
            <%= f.label :パスワード（確認用）,class:"col-sm-8" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"col-sm-offset-1" %>
          </div>
          <div class="col-sm-4">
            <%= f.submit "変更する", class:"btn btn-primary" %>
            <%= link_to "戻る", :back, class:"btn btn-default" %>
          </div>
        <% end %>

