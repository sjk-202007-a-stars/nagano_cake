<div class="container">
  <div class="row">
    <div class="col-lg-9 col-lg-offset-1">
      <h4>新規会員登録</h4>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "end_users/shared/error_messages", resource: resource %>
          <div class="form-horizontal">
          <div class="form-group">
            <strong class="col-sm-2">名前</strong>
            <%= f.label :family_name, '（姓）', class:"col-sm-1 col-sm-offset-2" %>
            <%= f.text_field :family_name, autofocus: true, autocomplete: "family_name", class:"col-sm-3" %>
            <%= f.label :first_name, '（名）', class:"col-sm-1" %>
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class:"col-sm-3" %>
          </div>

          <div class="form-group">
            <strong class="col-sm-3">フリガナ（全角カナ）</strong>
            <%= f.label :family_name_kana, '(セイ)', class:"col-sm-1 col-sm-offset-1" %>
            <%= f.text_field :family_name_kana, autofocus: true, autocomplete: "family_name_kana", class:"col-sm-3" %>
            <%= f.label :first_name_kana, '(メイ)', class:"col-sm-1" %>
            <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class:"col-sm-3" %>
          </div>

          <div class="form-group">
            <%= f.label :email, 'メールアドレス', class:"col-sm-2" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-sm-3 col-sm-offset-3" %>
          </div>

          <div class="form-group">
            <%= f.label :postal_code, '郵便番号（ハイフンなし）', class:"col-sm-3" %>
            <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class:"col-sm-3 col-sm-offset-2" %>
          </div>

          <div class="form-group">
            <%= f.label :address, '住所', class:"col-sm-2" %>
            <%= f.text_field :address, autofocus: true, autocomplete: "address", class:"col-sm-7 col-sm-offset-3" %>
          </div>

          <div class="form-group">
            <%= f.label :phone_number, '電話番号（ハイフンなし）', class:"col-sm-3" %>
            <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", class:"col-sm-3 col-sm-offset-2" %>
          </div>

          <div class="form-group">
            <%= f.label :password, 'パスワード(6文字以上)', class:"col-sm-3" %>
            <%= f.password_field :password, autocomplete: "new-password", class:"col-sm-3 col-sm-offset-2" %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, 'パスワード（確認用）', class:"col-sm-3" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"col-sm-3 col-sm-offset-2" %>
          </div>

          <div class="actions">
            <%= f.submit "新規登録", class:"btn btn-success center-block" %>
          </div>
        <% end %>
        </div>

        <h4>既に登録済みの方</h4>

        <p class="col-sm-offset-2"><%= link_to 'こちら', new_session_path(resource_name) %>からログインしてください。</p>

