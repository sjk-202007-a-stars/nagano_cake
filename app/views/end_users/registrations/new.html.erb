<div>新規会員登録</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "end_users/shared/error_messages", resource: resource %>

  <div class="field">
    <span>名前</span>
    <%= f.label :family_name, '（姓）' %>
    <%= f.text_field :family_name, autofocus: true, autocomplete: "family_name" %>
    <%= f.label :first_name, '（名）' %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>

  <div class="field">
    <span>フリガナ</span>
    <%= f.label :family_name_kana, '（セイ）' %>
    <%= f.text_field :family_name_kana, autofocus: true, autocomplete: "family_name_kana" %>
    <%= f.label :first_name_kana, '（メイ）' %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
  </div>

  <div class="field">
    <%= f.label :email, 'メールアドレス' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :postal_code, '郵便番号（ハイフンなし）' %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

  <div class="field">
    <%= f.label :address, '住所' %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :phone_number, '電話番号（ハイフンなし）' %>
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
  </div>

  <div class="field">
    <%= f.label :password, 'パスワード' %>
    <% if @minimum_password_length %>
    (<%= @minimum_password_length %> 文字以上)
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, 'パスワード（確認用）' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class:"btn btn-success" %>
  </div>
<% end %>

<div>既に登録済みの方</div>

<%= link_to 'こちら', new_session_path(resource_name) %>からログインしてください。

