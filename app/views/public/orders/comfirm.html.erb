<div class="col-lg-10">
  <div class="row">
    <h2>注文情報確認</h2>
  </div>

  <%= form_with(model: @order, local: true) do |f| %>

  <div class="row">
    <div class="col-lg-8">
      <table class="table-bordered">
        <thead>
          <tr>
            <th><h4>商品名</h4></th>
            <th><h4>単価（税込）</h4></th>
            <th><h4>数量</h4></th>
            <th><h4>小計</h4></th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td><%= attachment_image_tag cart_item.item, :image, :fill, 100, 100, fallback: "no_img.jpg" %>
                  <%= cart_item.item.name %></td>
              <th><%= cart_item.item.price_with_tax %></th>
              <th><%= cart_item.quantity %></th>
              <th><%= cart_item.sub_total.ceil.to_i(:delimited) %></th>
            </tr>
            <% @subtotal_price += cart_item.sub_total %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="col-lg-4">
    <table class="table-bordered">
      <tr>
        <th>送料</th>
        <th><%= @order.postage %>円</th>
      </tr>
      <tr>
        <th>商品合計</th>
        <th><%= @subtotal_price.ceil.to_i(:delimited) %></th>
      </tr>
      <tr>
        <th>請求金額</th>
        <th><% billling_amount = subtotal_price + @order.postage.to_i %>
          <%= billling_amount.to_i %></th>
      </tr>
    </table>
  </div>



  <div class="row space-sm">
    <div class="col-lg-2">
      <h3>支払方法</h3>
    </div>
    <div class="col-lg-4">
      <%= payment_method(@order.payment_method) %>
    </div>
  </div>

  <div class="row space-sm">
    <div class="col-lg-2">
      <h3>お届け先</h3>
    </div>
    <div class="col-lg-4">
      <%= @order.postal_code %>
      <%= @order.address %>
      <%= @order.name %>
    </div>
  </div>

  <%= f.hidden_field :end_user_id, :value => current_end_user.id %>
  <%= f.hidden_field :postal_code, :value => "#{@order.posttal_code}" %>
  <%= f.hidden_field :address, :value => "#{@order.address}" %>
  <%= f.hidden_field :name, :value => "#{@name.addressee}" %>
</div>

<div class="row space">
  <div class="col-lg-2 offset-lg-5">
    <%= f.submit "購入を確定する", class: "btn btn-success active" %>
  </div>
</div>


<% end %>
</div>