<div class="container">
  <div class="row">
    <h4>注文履歴詳細</h4>
		<!-- 注文情報 -->
		<div class="col-xs-5">
			<table class="table">
		    <thead>
		    	<tr>
		    		<th>注文情報</th>
		    		<th colspan="3"></th>
		    	</tr>
		    </thead>
		    <tbody>
					<tr>
						<td class="active">注文日</td>
						<td><%= @order.created_at %></td>
					</tr>
					<tr>
						<td class="active">配送先</td>
				 		<td><%= @order.end_user.postal_code %><br>
				 			<%= @order.end_user.address %><br>
				 			<%= @order.end_user.family_name %><%= @order.end_user.first_name %>
				 		</td>
				 	</tr>
				 	<tr>
			  		<td class="active">支払方法</td>
			  		<td><%= @order.payment_method %></td>
				  </tr>
			  	<tr>
			  		<td class="active">ステータス</td>
			  		<td><%= @order.status %></td>
			    </tr>
		    </tbody>
			</table>
		</div>
		<!-- 請求情報 -->
		<div class="col-xs-3  col-xs-offset-1">
			<table class="table">
		    <thead>
		    	<tr>
		    		<th>請求情報</th>
		    	</tr>
		    </thead>
			  <tbody>
					<tr>
						<td  class="active">商品合計</td>
						<td><%= @order.subtotal_price.to_s(:delimited) %>円</td>
					</tr>
					<tr>
						<td class="active">配送料</td>
						<td><%= @order.postage %>円</td>
					</tr>
					<tr>
						<th class="active">ご請求金額</th>
						<td><%= (@order.subtotal_price+@order.postage).to_s(:delimited) %>円</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
	<!-- 注文内容 -->
	<div class="row">
		<div class="col-xs-7">
			<table class="table">
				<thead>
		    	<tr>
		    		<th>注文内容</th>
		    	</tr>
		    </thead>
		    <tbody>
					<tr class="active">
						<td>商品</td>
						<td>単価(税込)</td>
						<td>個数</td>
						<td>小計</td>
					</tr>
					<% @order.order_items.each do |order_item| %>
						<tr>
					 		<td><%= order_item.item.name %></td>
					 		<td><%= order_item.item.price_with_tax %>円</td>
				 			<td><%= order_item.quantity %></td>
				 			<td><%= order_item.ordering_price.to_s(:delimited) %>円</td>
				 		</tr>
				 	<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>