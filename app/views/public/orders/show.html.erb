<div class="container">
    <div class="col-xs-12">
      <h3 class="item-headline">注文履歴詳細</h3>
    </div>
		<!-- 注文情報 -->
	<div class="col-xs-12">
		<div class="col-xs-7 order-table">
			<strong class="indent">注文情報</strong>
			<table class="table table-bordered">
		    <tbody>
					<tr>
						<td class="active">注文日</td>
						<td><%= @order.created_at %></td>
					</tr>
					<tr>
						<td class="active">配送先</td>
				 		<td><%= @order.postal_code %><br>
				 			<%= @order.address %><br>
				 			<%= @order.name %>
				 		</td>
				 	</tr>
				 	<tr>
			  		<td class="active">支払方法</td>
			  		<td><%= @order.payment_method %></td>
				  </tr>
			  	<tr>
			  		<td class="active">ステータス</td>
			  		<td><%= @order.status %></td>
			    </tr>
		    </tbody>
			</table>
		</div>
		<!-- 請求情報 -->
		<div class="col-xs-5 order-table">
			<strong class="indent">請求情報</strong>
			<table class="table table-bordered">
			  <tbody>
					<tr>
						<td  class="active">商品合計</td>
						<td><%= @order.subtotal_price.to_s(:delimited) %>円</td>
					</tr>
					<tr>
						<td class="active">配送料</td>
						<td><%= @order.postage %>円</td>
					</tr>
					<tr>
						<th class="active">ご請求金額</th>
						<td><%= (@order.subtotal_price+@order.postage).to_s(:delimited) %>円</td>
					</tr>
				</tbody>
			</table>
		</div>

	<!-- 注文内容 -->
		<div class="col-xs-8 order-table">
			<strong class="indent">注文内容</strong>
			<table class="table table-bordered">
		    <tbody>
					<tr class="active">
						<td>商品</td>
						<td>単価(税込)</td>
						<td>個数</td>
						<td>小計</td>
					</tr>
					<% @order.order_items.each do |order_item| %>
						<tr>
					 		<td><%= order_item.item.name %></td>
					 		<td><%= order_item.item.price_with_tax %>円</td>
				 			<td><%= order_item.quantity %></td>
				 			<td><%= order_item.ordering_price.to_s(:delimited) %>円</td>
				 		</tr>
				 	<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>