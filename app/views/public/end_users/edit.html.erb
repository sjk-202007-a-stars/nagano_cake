<div class="container">
  <div class="row">
    <div class="col-lg-9 col-lg-offset-1">
      <h4>登録情報編集</h4>
	  	<%= form_for(@end_user) do |f| %>
	      <div class="form-horizontal">
	        <div class="form-group">
	          <strong class="col-sm-2">名前</strong>
	          <%= f.label :family_name, '（姓）', class:"col-sm-1 col-sm-offset-2" %>
	          <%= f.text_field :family_name, class:"col-sm-3" %>
	          <%= f.label :first_name, '（名）', class:"col-sm-1" %>
	          <%= f.text_field :first_name, class:"col-sm-3" %>
	        </div>
	        <div class="form-group">
	          <strong class="col-sm-3">フリガナ（全角カナ）</strong>
	          <%= f.label :family_name_kana, '(セイ)', class:"col-sm-1 col-sm-offset-1" %>
	          <%= f.text_field :family_name_kana, class:"col-sm-3" %>
	          <%= f.label :first_name_kana, '(メイ)', class:"col-sm-1" %>
	          <%= f.text_field :first_name_kana, class:"col-sm-3" %>
	        </div>
	        <div class="form-group">
	          <%= f.label :email, 'メールアドレス', class:"col-sm-2" %>
	          <%= f.email_field :email,class:"col-sm-3 col-sm-offset-3" %>
	        </div>
	        <div class="form-group">
	          <%= f.label :postal_code, '郵便番号（ハイフンなし）', class:"col-sm-3" %>
	          <%= f.text_field :postal_code, class:"col-sm-3 col-sm-offset-2" %>
	        </div>
	        <div class="form-group">
	          <%= f.label :address, '住所', class:"col-sm-2" %>
	          <%= f.text_field :address, class:"col-sm-7 col-sm-offset-3" %>
	        </div>

	        <div class="form-group">
	          <%= f.label :phone_number, '電話番号（ハイフンなし）', class:"col-sm-3" %>
	          <%= f.text_field :phone_number, class:"col-sm-3 col-sm-offset-2" %>
	        </div>
	      </div>
				<div class="col-md-6 col-md-offset-3">
					<%= f.submit "編集内容を保存する", class:"btn btn-primary col-sm-6" %>
				</div>
				<div class="col-md-offset-3">
					<%= link_to "退会する", "/end_users/confirm", class:"btn btn-danger col-sm-3" %>
				</div>
			<% end %>
		</div>
	</div>
</div>