<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h3 class="item-headline">登録情報編集</h3>
    </div>
    <div class="col-xs-9">
	  	<%= form_for(@end_user) do |f| %>
	    <div class="form-horizontal user-info-table">
	        <div class="form-group">
	          <strong class="col-xs-2">名前</strong>
	          <%= f.label :family_name, '（姓）', class:"col-xs-1 col-xs-offset-2" %>
	          <%= f.text_field :family_name, class:"col-xs-3" %>
	          <%= f.label :first_name, '（名）', class:"col-xs-1" %>
	          <%= f.text_field :first_name, class:"col-xs-3" %>
	        </div>
	        <div class="form-group">
	          <strong class="col-xs-3">フリガナ（全角カナ）</strong>
	          <%= f.label :family_name_kana, '(セイ)', class:"col-xs-1 col-xs-offset-1" %>
	          <%= f.text_field :family_name_kana, class:"col-xs-3" %>
	          <%= f.label :first_name_kana, '(メイ)', class:"col-xs-1" %>
	          <%= f.text_field :first_name_kana, class:"col-xs-3" %>
	        </div>
	        <div class="form-group">
	          <%= f.label :email, 'メールアドレス', class:"col-xs-2" %>
	          <%= f.email_field :email,class:"col-xs-3 col-xs-offset-3" %>
	        </div>
	        <div class="form-group">
	          <%= f.label :postal_code, '郵便番号（ハイフンなし）', class:"col-xs-3" %>
	          <%= f.text_field :postal_code, class:"col-sxs-3 col-xs-offset-2" %>
	        </div>
	        <div class="form-group">
	          <%= f.label :address, '住所', class:"col-xs-2" %>
	          <%= f.text_field :address, class:"col-xs-7 col-xs-offset-3" %>
	        </div>

	        <div class="form-group">
	          <%= f.label :phone_number, '電話番号（ハイフンなし）', class:"col-xs-3" %>
	          <%= f.text_field :phone_number, class:"col-xs-3 col-xs-offset-2" %>
	        </div>
	    </div>
		<div class="col-xs-6 col-xs-offset-3">
			<%= f.submit "編集内容を保存する", class:"btn btn-primary col-xs-6" %>
		</div>
		<div class="col-xs-offset-3">
			<%= link_to "退会する", "/end_users/confirm", class:"btn btn-danger col-xs-3" %>
		</div>
			<% end %>
		</div>
	</div>
</div>