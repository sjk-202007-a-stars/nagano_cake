<div class="container main">
  <%= render 'public/items/genre_search', genres: @genres %>
  <div class="col-xs-9">
    <h3 class="item-headline">
    検索文字 '<%= params[:word] %>' に合致する商品
    </h4><p>全<%= @items.total_count %>件ヒットしました</p>
    <div class="item-index">
      <% @items.each do |item| %>
        <div class="item-wrapper">
          <%= link_to item_path(item) do %>
            <div class="item-image">
              <%= attachment_image_tag item, :image, :fill, 150, 100, fallback: "no_image.jpg", size: '150x100' %>
            </div>
            <div class="item-description">
              <p><%= item.name %></p>
              <p>￥ <%= item.price_with_tax %></p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <div class="page">
    <%= paginate @items %>
  </div>
</div>