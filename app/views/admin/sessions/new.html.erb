<div class="container">
  <div class="row">
    <div class="col-lg-7 col-lg-offset-2">

      <h4>管理者ログイン</h4>
      <% if notice %>
        <p class="alert alert-notice"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-error"><%= alert %></p>
      <% end %>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-horizontal">
        <div class="form-group">
          <%= f.label :email, 'メールアドレス', class:"col-sm-3 col-sm-offset-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-sm-7" %>
        </div>

        <div class="form-group">
          <%= f.label :password, 'パスワード', class:"col-sm-3 col-sm-offset-2" %>
          <%= f.password_field :password, autocomplete: "current-password", class:"col-sm-7" %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン", class:"btn btn-primary btn-lg center-block" %>
        </div>
      <% end %>
      </div>

    </div>
  </div>
</div>
