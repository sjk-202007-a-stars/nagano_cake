<!-- admin/orders/show -->
<div class="container">
  <div class="row">
    <div class="col-xs-12">
	    <h2>
	      <span class="bg-success">注文履歴一覧</span>
	    </h2>
    </div>
  </div>
</div>
<table>
	<tr>
		<th>購入者</th>
		<td>
			<%= link_to admin_end_user(@order) do %>
			<%= order.end_user.family_name %><%= order.end_user.first_name %>
			<% end %>
		</td>
	</tr>
	<tr>
		<th>配送先</th>
		<td>
			〒<%= @order.postal_code %> <%= @order.address %><br>
			<%= @order.name %>
		</td>
	</tr>
	<tr>
		<th>支払方法</th>
		<td><%= @order.payment_method %></td>
	</tr>
	<tr>
		<th>注文ステータス</th>
		<td>
			<div class="col-xs-3">
				<%= form_for @order do |f| %>
					<%= f.select :status, options_for_select(Order.statuses), class:"form-control" %>
					<div class="col-xs-offset-2 col-xs-10">
      			<%= f.submit '更新', class:"btn btn-primary" %>
					</div>
				<% end %>
			</div>
		</td>
	</tr>
</table>
<div class="col-xs-7">
	<table class="table">
    <thead class="thead-dark">
      <tr class="active">
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th>製作ステータス</th>
      </tr>
    </thead>
		<tbody>
			<% @order.order_items.each do |order_item| %>
				<tr>
					<td>
						<% order_item.items.each do |item| %>
							<%= item.name %>
						<% end %>
					</td>
			 		<td><%= order_item.ordering_price %></td>
		  		<td><%= order_item.quantity %></td>
		  		<td><%= order_item.ordering_price*order_item.quantity %></td>
		  		<td>
		  			<div class="col-xs-3">
						<%= form_for order_item,:url => {controller: "admin/order_items", action: "update"} do |f| %>
							<%= f.select :making_status, options_for_selec(OrderItem.making_statuses), class:"form-control" %>
							<div class="col-xs-offset-2 col-xs-10">
		      			<%= f.submit '更新', class:"btn btn-primary" %>
							</div>
						<% end %>
					</div>
		  		</td>
			  </tr>
			<% end %>
	  </tbody>
	</table>
</div>
<div class="col-xs-7">
	<table>
		<tr>
			<th>商品合計</th>
			<th>送料</th>
			<th>請求金額合計</th>
		</tr>
		<tr>
			<td><%= @order.subtotal_price %></td>
			<td><%= @order.postage %></td>
			<th><%= @order.subtotal_price+@order.postage %></th>
		</tr>
	</table>
</div>