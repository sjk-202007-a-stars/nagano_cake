<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <h2>
                <span class="bg-success">
                	<%= @end_user.family_name %><%= @end_user.first_name %>さんの会員情報編集
                </span>
            </h2>
        </div>
    </div>
    <div class="row">
		<div class="col-xs-6">
	    	<%= form_for @end_user,:url => {controller: "admin/end_users", action: "update"} do |f| %>
				<table class="table">
					<tr>
						<td>会員ID</td>
						<td><%= @end_user.id %></td>
					</tr>
					<tr>
						<td>氏名</td>
						<td><%= f.text_field :family_name %></td>
						<td><%= f.text_field :first_name %></td>
					</tr>
					<tr>
						<td>フリガナ</td>
						<td><%= f.text_field :family_name_kana %></td>
						<td><%= f.text_field :first_name_kana %></td>
					</tr>
					<tr>
						<td>郵便番号</td>
						<td><%= f.text_field :postal_code %></td>
					</tr>
					<tr>
						<td>住所</td>
						<td><%= f.text_field :address %></td>
					</tr>
					<tr>
						<td>電話番号</td>
						<td><%= f.text_field :phone_number %></td>
					</tr>
					<tr>
						<td>メールアドレス</td>
						<td><%= f.text_field :email %></td>
					</tr>
					<tr>
						<td>会員ステータス</td>
						<td>
							<%= f.radio_button :is_deleted, false %>
							<%= f.label :is_deleted, "有効" %>
							<%= f.radio_button :is_deleted, true %>
							<%= f.label :is_deleted, "退会済み" %>
						</td>
					</tr>
				</table>
				<div class="col-xs-offset-2 col-sm-10">
					<%= f.submit "編集内容を保存する", class:"btn btn-primary" %>
					<%= link_to "戻る", admin_end_user_path(@end_user), class:"btn btn-default" %>
				</div>
			<% end %>
		</div>
	</div>
</div>