<div class="container">
  <div class="row">
    <div class="col-lg-12 col-lg-offset-1">
      <h4><%= @end_user.family_name %><%= @end_user.first_name %>さんの会員詳細</h4>
    </div>
  </div>
	<%= form_for @end_user,:url => {controller: "admin/end_users", action: "update"} do |f| %>
  	<div class="row">
			<div class="form-horizontal col-sm-8">
	      <div class="form-group">
					<strong class="col-sm-3">会員ID</strong>
					<p><%= @end_user.id %></p>
				</div>
				<div class="form-group">
					<label class="col-sm-3">氏名</label>
					<%= f.text_field :family_name, class:"col-sm-2" %>
					<%= f.text_field :family_name, class:"col-sm-2 col-sm-offset-1" %>
				</div>
				<div class="form-group">
					<label class="col-sm-3">フリガナ</label>
					<%= f.text_field :family_name_kana, class:"col-sm-2" %>
					<%= f.text_field :family_name_kana, class:"col-sm-2 col-sm-offset-1" %>
				</div>
				<div class="form-group">
					<label class="col-sm-3">郵便番号</label>
					<%= f.text_field :postal_code, class:"col-sm-2" %>
				</div>
				<div class="form-group">
					<label class="col-sm-3">住所</label>
					<%= f.text_field :address, class:"col-sm-5" %>
				</div>
				<div class="form-group">
					<label class="col-sm-3">電話番号</label>
					<%= f.text_field :phone_number, class:"col-sm-3" %>
				</div>
				<div class="form-group">
					<label class="col-sm-3">メールアドレス</label>
					<%= f.text_field :email, class:"col-sm-3" %>
				</div>
				<div class="form-group">
					<label class="col-sm-3">会員ステータス</label>
					<%= f.radio_button :is_deleted, false %>
					<%= f.label :is_deleted, "有効" %>
					<%= f.radio_button :is_deleted, true %>
					<%= f.label :is_deleted, "退会済み" %>
				</div>
			</div>
		</div>
		<div class="row">
			<div>
				<%= f.submit "編集内容を保存する", class:"btn btn-primary" %>
				<%= link_to "戻る", admin_end_user_path(@end_user), class:"btn btn-default" %>
			</div>
		</div>
	<% end %>
</div>