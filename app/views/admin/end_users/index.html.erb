<div class="container">
    <h3 class="item-headline">会員一覧</h3>

	<div class="col-lg-10 col-lg-offset-1 user-info-table">
	<table class="table table-hover">
	    <tr class="active">
		    <th>会員ID</th>
		    <th>氏名</th>
		    <th>メールアドレス</th>
		    <th>ステータス</th>
	    </tr>
	    <tbody>
			<% @end_users.each do |end_user| %>
				<tr>
					<td><%= end_user.id %></td>
			 		 <td>
			 		 	<%= link_to admin_end_user_path(end_user) do %>
			 		 		<%= end_user.family_name %><%= end_user.first_name %>
			 		 	<% end %>
			 		 </td>
			  		<td><%= end_user.email %></td>
			  		<td>
			  			<% if end_user.is_deleted %>
			  				退会済み
			  			<% else %>
			  				有効
			  			<% end %>
			        </td>
			    </tr>
			<% end %>
		</tbody>
	</table>
	<%= paginate @end_users %>
</div>