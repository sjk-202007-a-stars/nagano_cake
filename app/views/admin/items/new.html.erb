<div class="container">
  <h3>商品新規登録</h3>
  <%= form_for [:admin, @item] do |f| %>
    <%= render 'admin/genres/errors', model: f.object %>
    <div class="col-xs3">
      <div class="field row">
        <%= f.attachment_field :image %>
      </div>
    </div>
    <div class="col-lxs-4">
      <div class="field row">
        <%= f.label :name, "商品名" %>
        <%= f.text_field :name %>
      </div>
      <div class="field row">
        <%= f.label :introduction, "商品説明" %>
        <%= f.text_area :introduction %>
      </div>
      <div class="field row">
        <%= f.label :genre_id, "ジャンル名" %>
        <%= f.collection_select :genre_id, Genre.all, :id, :name, {include_blank: "-- 選択してください --"} %>
      </div>
      <div class="field row">
        <%= f.label :price, "税抜価格" %>
        <%= f.number_field :price %>
      </div>
      <div class="field row">
        <%= f.label :sales_status, "販売ステータス" %>
        <%= f.select :sales_status, [["販売中", true], ["売切れ", false]], {include_blank: "-- 選択してください --"} %>
      </div>
    </div>
    <div class="col-xs-3">
      <%= f.submit "新規登録", class: "btn btn-primary" %>
      </div>
  <% end %>
</div>