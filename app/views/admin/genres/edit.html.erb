<h1>ジャンル編集</h1>
<%= form_for [:admin, @genre] do |f| %>
  <%= render 'admin/genres/errors', model: f.object %>
  <%= f.label :name, "ジャンル" %>
  <%= f.text_field :name %>

  <%= f.radio_button :is_active, true %>
  <%= f.label :is_active, "有効" %>
  <%= f.radio_button :is_active, false %>
  <%= f.label :is_active, "無効" %>
  <%= f.submit "変更を保存する", class: "btn btn-primary" %>
<% end %>

<%= link_to '戻る', admin_genres_path %>