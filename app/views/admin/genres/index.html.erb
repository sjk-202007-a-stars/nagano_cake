<div class="container">
  <div class="page-title">
    <h3 class="item-headline">ジャンル一覧・追加</h3>
  </div>
  <div class="genre-form">
    <%= form_for [:admin, @genre] do |f| %>
      <%= render 'admin/genres/errors', model: f.object %>
      <%= f.label :name, "ジャンル" %>
      <%= f.text_field :name %>
      <%= f.radio_button :is_active, true %>
      <%= f.label :is_active, "有効" %>
      <%= f.radio_button :is_active, false %>
      <%= f.label :is_active, "無効" %>
      <%= f.submit "追加", class: "btn btn-primary btn-sm" %>
    <% end %>
  </div>
  <div class="col-xs-5">
    <table class="table table-hover">
      <thead class="thead-dark">
        <tr>
          <th>ジャンル</th>
          <th>状態</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td>
              <% if genre.is_active %>
                有効
              <% else %>
                無効
              <% end %>
            </td>
            <td>
              <%= link_to '編集する', edit_admin_genre_path(genre), class: "btn btn-primary btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
